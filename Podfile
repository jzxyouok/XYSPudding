# Uncomment this line to define a global platform for your project
# platform :ios, '9.0'

target 'XYSPudding' do
  # Uncomment this line if you're using Swift or would like to use dynamic frameworks
use_frameworks!

#网络相关的框架
pod 'AFNetworking' 		#网络请求框架
pod 'MJRefresh' 		#上拉和下拉刷新控件
pod 'SDWebImage' 		#提供UIImageView类别以支持加载来自网络的图片

pod 'SVProgressHUD'		#一个显示HUD窗口的第三方类

pod 'BlocksKit' 		#对Cocoa类的一个扩展,简化了Block编程
pod 'Masonry' 			#一个轻量级的布局框架,用链式语法封装自动布局
pod 'ReactiveCocoa'		#RAC框架
pod 'CocoaLumberjack','~> 2.3.0'		#一款高性能的日志输出插件 (for Xcode 7.3 and Swift 2.2, use the 2.3.0 version, ios, '7.0')

end
